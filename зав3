# 3) Квадрати відсортованого масиву (two pointers)
def sorted_squares(nums):
    n = len(nums)
    i, j = 0, n - 1
    res = [0] * n
    k = n - 1
    while i <= j:
        if abs(nums[i]) > abs(nums[j]):
            res[k] = nums[i] * nums[i]
            i += 1
        else:
            res[k] = nums[j] * nums[j]
            j -= 1
        k -= 1
    return res
# Приклади:
# print(sorted_squares([-4,-1,0,3,10]))   # [0,1,9,16,100]
# print(sorted_squares([-7,-3,2,3,11]))   # [4,9,9,49,121]
